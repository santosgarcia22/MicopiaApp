<?xml version="1.0" encoding="utf-8"?>
<com.google.android.material.card.MaterialCardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginTop="8dp"
    android:layout_marginBottom="8dp"
    app:cardCornerRadius="16dp"
    app:cardUseCompatPadding="true"
    app:strokeWidth="1dp"
    app:strokeColor="#F0F0F0">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="16dp">

        <!-- Icono (puedes cambiar por tu vector) -->
        <ImageView
            android:id="@+id/imgIcono"
            android:layout_width="42dp"
            android:layout_height="42dp"
            android:background="@drawable/bg_item_inner_border"
            android:padding="8dp"
            android:scaleType="centerInside"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            android:src="@android:drawable/ic_lock_idle_lock" />

        <!-- Título del proceso -->
        <TextView
            android:id="@+id/tvTituloProceso"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:textStyle="bold"
            android:textSize="16sp"
            android:textColor="#202124"
            app:layout_constraintTop_toTopOf="@id/imgIcono"
            app:layout_constraintStart_toEndOf="@id/imgIcono"
            app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginStart="12dp"
            android:text="Control de Acceso de Aeronave" />

        <!-- Botón de acción -->
        <com.google.android.material.button.MaterialButton
            android:id="@+id/btnAccion"
            style="@style/Widget.Material3.Button"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Acceder Ahora"
            app:layout_constraintStart_toStartOf="@id/tvTituloProceso"
            app:layout_constraintTop_toBottomOf="@id/tvTituloProceso"
            android:layout_marginTop="10dp" />

    </androidx.constraintlayout.widget.ConstraintLayout>
</com.google.android.material.card.MaterialCardView>